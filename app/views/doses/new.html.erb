<h1>Add Ingredients</h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient%>, <%= dose.description %></li>
    <% end %>
</ul>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.button :submit %>
<% end %>

<%= link_to "Back to List", cocktails_path %>